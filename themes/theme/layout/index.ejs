<body class="index">

  <%- partial('_section/header',        null, {cache: true}) %>

  <%#- partial('_section/nav',           null, {cache: true}) %>
  <% var tag = site.tags.findOne( { name: 'showcase' } ); -%>
  <%#- partial('_section/list-article-excerpts-by-tag',  {tag: 'showcase'} ) %>
  <%- partial('_section/list-articles',  { articles: tag.posts, format: 'excerpt' } ) %>

  <%#- partial('_section/list-article-excerpts-by-tag',  {tag: 'featured'} ) %>
  <%- partial('_section/list-featured-categories' ) %>

  <main>
    <header>
      <h1>Recent Posts...</h1>
    </header>
    <%- partial('_section/list-articles', { articles: page.posts, format: 'excerpt' } ) -%>
    <%- partial('_section/list-paginator' ) -%>

  </main>

  <%- partial('_section/asides',        null, {cache: true}) %>
  <%- partial('_section/footer',        null, {cache: true}) %>
  <%- partial('_site/after-footer',     null, {cache: true}) %>

</body>
