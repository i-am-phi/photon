<head>
  <meta charset="utf-8">
  <%
  var title = page_title()
  %>
  <title><%= title %></title>
  <%# TODO: get description from page when available  %>
  <meta name="description" content="<%= config.description %>">
  <meta name="author" content="<%= config.author %>">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
<% if (theme.rss) { -%>
  <link rel="alternate" href="<%- url_for(theme.rss) %>" title="<%= config.title %>" type="application/atom+xml">
<% } -%>
<% if (config.favicon) { -%>
  <link rel="icon" href="<%- url_for('images/' + config.favicon) %>">
<% } -%>
<%# TODO: code highlight font integration -%>
<% if (config.highlight.enable) { -%>
  <link href="//fonts.googleapis.com/css?family=Source+Code+Pro" rel="stylesheet" type="text/css">
<% } -%>
<%# TODO: pull the css from the theme config file -%>
<%- css('css/photon') -%>
<%- css('css/print') -%>

<%- css('fancybox/jquery.fancybox.min') -%>
<%# TODO: google analytics -%>
<%#- partial('google-analytics') -%>
<% if (config.google_analytics) { -%>
  <meta name="google-site-verification" content="<%-  config.google_analytics %>" />
<% } -%>
<%# TODO: open graph -%>
<meta property="og:title" content="<%= title %>">
<meta property="og:description" content="<%= config.description %>">
<!--
<meta property="og:image" content="<%= url_for() %>">
<meta property="og:url" content="">
<meta name="twitter:card" content="summary_large_image">
-->

<%- css('highlight/atom-one-dark') -%>
<%- js('highlight/highlight.pack') -%>
<script>hljs.initHighlightingOnLoad();</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/1.20.3/TweenMax.min.js"></script>

<script type="application/ld+json">
{
  "@context": "http://schema.org",
  "@type": "NewsArticle",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "<%- url_for(page.path) %>"
  },
  "headline": "<%- page.title %>",
  "image": [
    "<%- page.figure.image %>"
   ],
  "datePublished": "<%- page.date %>",
  "dateModified": "<%- page.updated %>",
  "author": {
    "@type": "Person",
    "name": "phi"
  },
   "publisher": {
    "@type": "Organization",
    "name": "illumiphi",
    "logo": {
      "@type": "ImageObject",
      "url": "http://illumiphi.com/images/logo.jpg"
    }
  },
  "description": "<%- strip_html(page.excerpt) %>"
}
</script>

</head>
