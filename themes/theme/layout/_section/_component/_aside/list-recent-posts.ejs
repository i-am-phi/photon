<% if (site.posts.length){ -%>
  <aside>
    <h3><%= __('recent_posts') %></h3>
    <ul>
      <% site.posts.sort('date', -1).limit(5).each( post => { -%>
        <li>
          <a href="<%- url_for(post.path) %>"><%= post.title || '(no title)' %></a>
        </li>
      <% }) -%>
    </ul>
  </aside>
<% } -%>
